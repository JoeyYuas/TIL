              android:baselineAligned="false"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <fragment android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="0.4"
              android:id="@+id/fragmentMenuList"
